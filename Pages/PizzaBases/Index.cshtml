@page
@model PizzaLoco.Pages.PizzaBases.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Pizza Bases</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PizzaBase[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PizzaBase) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PizzaBaseId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PizzaBaseId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PizzaBaseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
