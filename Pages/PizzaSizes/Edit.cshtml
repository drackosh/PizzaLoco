@page
@model PizzaLoco.Pages.PizzaSizes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pizza Size</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PizzaSize.PizzaSizeId" />
            <div class="form-group">
                <label asp-for="PizzaSize.Size" class="control-label">Size (cm)</label>
                <input asp-for="PizzaSize.Size" class="form-control" />
                <span asp-validation-for="PizzaSize.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
